<div class="container" id="section_1" >

  <div id="login-box">
      <%= image_tag("NC_logo.svg", :alt => "Next Capital Logo", :id => "logo") %>
      <h1>Bowling Jackpot</h1> 
      <h2>Ready to have fun? Sign up:</h2>

      <div id="form-login">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

             <%= f.text_field :name, autofocus: true, placeholder: "Name", class: "text-input" %>
             <br />

            <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "text-input" %>
            <br />
            <%= f.password_field :password, autocomplete: "off",  placeholder: "Password (8 characters minimum)", class: "text-input" %>
            <br />
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", class: "text-input" %>
            <br />
            <%= f.submit "Sign up", id: "login-button" %>
        <% end %>
      </div>

      <%= render "devise/shared/links" %>
    </div>
  </div>