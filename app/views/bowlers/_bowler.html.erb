
			<div id="bowler_<%= bowler.id %>" >
              <div class="bowlers col-md-3 col-sm-3">
                    <h3 class="bowler-name"><%= bowler.name %></h3>                
                    <%= link_to 'Show', bowler, :class => "button-bowler" %>
                     <button type="button" class="button-bowler" data-toggle="modal" data-target="#myupdatebowler_<%= bowler.id %>">
                          Update
                      </button>
                </tr>
              </div>
          </div>
           
           <!-- Modal - update posts -->
                  <%= form_for(bowler) do |f| %>
                  <div class="modal fade" id="myupdatebowler_<%= bowler.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Update</h4>
                      </div>
                      <div class="modal-body">

                      <div class="field">
                        <%= f.label :name %><br>
                        <%= f.text_area :name , class: "form-control" %>
                      </div>

                      </div>
                      <div class="modal-footer">
                        <button type="button" id="myupdatebutton_<%= bowler.id %>" class="btn btn-default" data-dismiss="modal">Close</button>
                        <%= submit_tag "Update", class: "btn btn-primary" %>
                      </div>
                    </div>
                  </div>
                  </div>
                  <% end %>