<!--  SECTION 1 -->
        <div class="container" id="section_1" >
            
            <div id="login-box">
              <%= image_tag("NC_logo.svg", :alt => "Next Capital Logo", :id => "logo") %>
              <h1>Bowling Jackpot</h1> 
              <h3>Ready to have fun? Join us:</h3> 

              <div id="form-login">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      
       
                        <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "text-input" %>
                        <br>

                 

                        <%= f.password_field :password, autocomplete: "off", placeholder: "Password", class: "text-input" %>
                        <br>

                      <% if devise_mapping.rememberable? -%>
                        
                          <%= f.check_box :remember_me %>
                          <%= f.label :remember_me %>
                          <br>
                      <% end -%>

              
                        <%= f.submit "Log in", id: "login-button" %>
           
                    <% end %>
                    <%= render "devise/shared/links" %>
                </div>

        
            </div>


        </div>



