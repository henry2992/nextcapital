
<p id="notice"><%= notice %></p>


<p>
  <strong>Name:</strong>
  <%= @league.name %>
</p>

<p>
  <strong>Content:</strong>
  <%= @league.content %>

  <br>
  El Jackpot es este:

  <% @league.jackpots.each do |j| %>
      <tr>
        <td><%= j.balance %></td>
        <br>
      </tr>
  <% end %>
 
 <% if notice %>

    <%= flash[:notice].join(" ") %>

<% end %>



   <% @league.jackpots.each do |t| %>
     <% t.tickets.each do |x| %>
        <tr>
          <td>Ticket numero <%= x.id %></td>
          <td>League ID:<%= x.league_id%></td>
          <td>JAckpot ID:<%= x.jackpot_id%>
          <td> Price: <%= x.price %></td>
          <td> Status: <%= x.status %></td>
          <td> Bowler:<%= x.bowler_id %></td>
          <br>
        </tr>
    <% end %>
  <% end %>

</p>

<% @league.bowlers.each do |bowler| %>
      <tr> Nombre:
        <td><%= bowler.name %></td>
     
        <td><%= button_to 'Buy Ticket', {:controller => "tickets", :action => "buy", :ticket_id => bowler.id, :league_id => @league} , :method=>:post  %></td>
       
        <br>
      </tr>
 <% end %>




